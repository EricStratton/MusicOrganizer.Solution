@using Organizer.Models;

<h3>Here are the records in this catalog:</h3>

<ol>
@foreach (Record record in @Model["records"])
{
  <li><a href='/catalogs/@Model["catalog"].Id/records/@record.Id'>@record.Album</a></li>
}
</ol>

<p><a href='/catalogs/@Model["catalog"].Id/records/new'>Add another record</a></p>
